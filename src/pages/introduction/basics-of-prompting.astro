        color: #fff;
        margin-bottom: 0.3rem;
    }
    .try-it p {
        font-size: 0.82rem;
        color: #94a3b8;
        margin-bottom: 1rem;
    }
    .try-it textarea {
        width: 100%;
        background: #0f1117;
        border: 1px solid #2d3348;
        color: #e2e8f0;
        border-radius: 8px;
        padding: 0.8rem;
        font-size: 0.85rem;
        font-family: monospace;
        resize: vertical;
        min-height: 80px;
        outline: none;
    }
    .try-it textarea:focus {
        border-color: #6366f1;
    }
    .score-display {
        margin-top: 1rem;
    }
    .score-bar {
        height: 8px;
        background: #2d3348;
        border-radius: 4px;
        overflow: hidden;
        margin: 6px 0 3px;
    }
    .score-fill {
        height: 100%;
        border-radius: 4px;
        transition: width 0.4s;
    }
    .score-label {
        display: flex;
        justify-content: space-between;
        font-size: 0.75rem;
        color: #64748b;
    }
    .score-feedback {
        font-size: 0.82rem;
        margin-top: 0.8rem;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        line-height: 1.5;
    }

    .tip-banner {
        background: #1e2130;
        border: 1px solid #3b4268;
        border-radius: 12px;
        padding: 1rem 1.4rem;
        margin-top: 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 0.8rem;
    }
    .tip-banner p {
        font-size: 0.88rem;
        color: #94a3b8;
        line-height: 1.6;
    }
    .tip-banner strong {
        color: #e2e8f0;
    }
</style>

<script>
    function showShot(event: Event, type: string) {
        document
            .querySelectorAll(".shot-content")
            .forEach((el) => el.classList.remove("active"));
        document
            .querySelectorAll(".shot-tab")
            .forEach((el) => el.classList.remove("active"));
        document.getElementById("shot-" + type)?.classList.add("active");
        (event?.target as HTMLElement)?.classList.add("active");
    }

    function checkPrompt() {
        const prompt = (
            document.getElementById("prompt-input") as HTMLInputElement
        )?.value.trim();
        const display = document.getElementById("score-display");
        if (!prompt) {
            if (display) display.style.display = "none";
            return;
        }
        if (display) display.style.display = "block";

        // Clarity: has verb/instruction word?
        const instructionWords = [
            "what",
            "how",
            "why",
            "explain",
            "write",
            "list",
            "describe",
            "summarize",
            "translate",
            "create",
            "generate",
            "complete",
            "find",
            "compare",
            "give",
        ];
        const hasInstruction = instructionWords.some((w) =>
            prompt.toLowerCase().includes(w),
        );
        const isLongEnough = prompt.length > 15;
        let clarity = 0;
        if (hasInstruction) clarity += 50;
        if (isLongEnough) clarity += 30;
        if (prompt.includes("?") || prompt.endsWith(".")) clarity += 20;
        clarity = Math.min(clarity, 100);

        // Specificity: has context/detail?
        const wordCount = prompt.split(" ").length;
        let specificity = Math.min(wordCount * 8, 100);
        if (prompt.toLowerCase().includes("example"))
            specificity = Math.min(specificity + 20, 100);
        if (
            prompt.toLowerCase().includes("format") ||
            prompt.toLowerCase().includes("list") ||
            prompt.toLowerCase().includes("step")
        )
            specificity = Math.min(specificity + 15, 100);

        const clarityBar = document.getElementById("clarity-bar");
        const clarityPct = document.getElementById("clarity-pct");
        const specificBar = document.getElementById("specific-bar");

        if (clarityBar) clarityBar.style.width = clarity + "%";
        if (clarityPct) clarityPct.textContent = clarity + "%";
        if (specificBar) specificBar.style.width = specificity + "%";

        const specificPct = document.getElementById("specific-pct");
        if (specificPct) specificPct.textContent = specificity + "%";

        const avg = (clarity + specificity) / 2;
        const feedback = document.getElementById("score-feedback");
        if (avg >= 75) {
            if (feedback) {
                feedback.style.background = "#1a3a2a";
                feedback.style.color = "#4ade80";
                feedback.textContent =
                    "‚úÖ Great prompt! Clear and specific ‚Äî the AI should give you a good answer.";
            }
        } else if (avg >= 45) {
            if (feedback) {
                feedback.style.background = "#2a2a1a";
                feedback.style.color = "#fbbf24";
                feedback.textContent =
                    '‚ö†Ô∏è Decent prompt, but could be more specific. Try adding more context or an instruction word like "explain" or "list".';
            }
        } else {
            if (feedback) {
                feedback.style.background = "#3a1e1e";
                feedback.style.color = "#f87171";
                feedback.textContent =
                    '‚ùå Too vague. Add more detail ‚Äî what exactly do you want the AI to do? Try starting with "Explain...", "Write...", or "Give me a list of..."';
            }
        }
    }
</script>
