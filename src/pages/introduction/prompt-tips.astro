        border-color: #6366f1;
        color: #fff;
    }
    .nav-btn.primary:hover {
        background: #4f46e5;
    }
    .nav-btn:disabled {
        opacity: 0.3;
        cursor: not-allowed;
    }

    /* Cheatsheet */
    .cheatsheet {
        display: none;
        animation: fadeIn 0.3s ease;
    }
    .cheatsheet.active {
        display: block;
    }
    .cheat-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.8rem;
    }
    @media (max-width: 580px) {
        .cheat-grid {
            grid-template-columns: 1fr;
        }
    }
    .cheat-card {
        background: #1e2130;
        border: 1px solid #2d3348;
        border-radius: 12px;
        padding: 1rem 1.2rem;
        border-top: 3px solid #6366f1;
    }
    .cheat-card h4 {
        font-size: 0.88rem;
        color: #fff;
        margin-bottom: 0.5rem;
    }
    .cheat-card p {
        font-size: 0.8rem;
        color: #94a3b8;
        line-height: 1.55;
    }
