    }
    @media (max-width: 600px) {
        .compare {
            grid-template-columns: 1fr;
        }
    }

    .compare-box {
        border-radius: 12px;
        padding: 1rem 1.2rem;
    }
    .compare-box.before {
        background: #1e1515;
        border: 1px solid #5c2626;
    }
    .compare-box.after {
        background: #131e15;
        border: 1px solid #1a5c30;
    }
    .compare-label {
