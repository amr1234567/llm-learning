        padding: 0.75rem 0.9rem;
    }
    .compare-box .verdict {
        font-size: 0.78rem;
        margin-top: 0.6rem;
        padding: 4px 10px;
        border-radius: 6px;
        display: inline-block;
    }
    .before .verdict {
        background: #3a1e1e;
        color: #f87171;
    }
    .after .verdict {
        background: #1a3a2a;
        color: #4ade80;
    }
    .output-label {
        font-size: 0.7rem;
        color: #64748b;
        margin-top: 0.6rem;
        margin-bottom: 0.2rem;
    }
    .output-text {
        font-size: 0.8rem;
        color: #94a3b8;
        font-style: italic;
    }

    /* Rule box */
    .rule-box {
        background: #1e2130;
        border: 1px solid #3b4268;
        border-radius: 12px;
        padding: 1rem 1.3rem;
        margin-bottom: 1.4rem;
    }
    .rule-box h4 {
        font-size: 0.85rem;
        color: #fff;
        margin-bottom: 0.6rem;
    }
    .rule-list {
        list-style: none;
    }
    .rule-list li {
        font-size: 0.83rem;
        color: #94a3b8;
        padding: 0.3rem 0;
        display: flex;
        gap: 0.5rem;
        align-items: flex-start;
    }
    .rule-list li::before {
        content: "‚Üí";
        color: #6366f1;
        flex-shrink: 0;
        margin-top: 1px;
    }

    /* Navigation buttons */
    .nav-btns {
        display: flex;
        justify-content: space-between;
        margin-top: 1.5rem;
    }
    .nav-btn {
        padding: 0.55rem 1.4rem;
        border-radius: 10px;
        font-size: 0.88rem;
