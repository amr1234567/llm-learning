        flex-wrap: wrap;
        margin-bottom: 1.5rem;
        justify-content: center;
    }
    .tip-btn {
        padding: 0.45rem 1rem;
        border-radius: 20px;
        font-size: 0.82rem;
        font-weight: 600;
        cursor: pointer;
        border: 1px solid #2d3348;
        background: #1e2130;
        color: #64748b;
        transition: all 0.2s;
    }
