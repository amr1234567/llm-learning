<script is:inline>
    let current = 0;
    const total = 6;
    const visited = new Set([0]);

    function goTo(n) {
        const currentTip = document.getElementById("tip-" + current);
        if (currentTip) {
            currentTip.classList.remove("active");
        }
        const currentBtn = document.getElementById("btn-" + current);
        if (currentBtn) {
            currentBtn.classList.remove("active");
        }

        current = n;
        visited.add(n);

        const el = document.getElementById("tip-" + n);
        if (el) {
            el.classList.add("active");
        }
        const btn = document.getElementById("btn-" + n);
        if (btn) {
            btn.classList.add("active");
            btn.classList.add("visited");
        }

        // Update progress
        document.querySelectorAll(".progress-step").forEach((s, i) => {
            if (s) {
                s.classList.toggle("done", visited.has(i));
            }
        });

        window.scrollTo({ top: 0, behavior: "smooth" });
    }
</script>
